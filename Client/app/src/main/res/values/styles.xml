<resources>

    <color name="sf_orange">#ff6600</color>
    <color name="sf_green">#2e8b57</color>
    <color name="sf_light_gray">#BBBBBB</color>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="android:windowNoTitle">false</item>-->
    </style>

    <!-- URI related Text Boxes -->
    <style name="UriComponent" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@drawable/rounded_rectangle</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="AppTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppSubTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Heading" parent="@android:style/TextAppearance.WindowTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!-- Option Styles (Numbers, Labels, Text Boxes,...) -->

    <style name="OptionRow">
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="OptionLabel" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:padding">2dp</item>
    </style>


    <style name="OptionValue">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:padding">3dp</item>
        <item name="android:textColorHint">@color/sf_light_gray</item>
        <item name="android:hint">@string/none</item>
        <item name="android:background">@drawable/rounded_rectangle</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/sf_green</item>
    </style>

    <style name="OptionValue.Inactive">
        <item name="android:enabled">false</item>
        <item name="android:hint">@string/unsupported</item>
    </style>

    <style name="Payload" parent="OptionValue">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:gravity">top</item>
    </style>
</resources>
